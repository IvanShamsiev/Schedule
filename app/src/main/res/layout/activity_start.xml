<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.schedule.ui.StartActivity">

    <Button
        android:id="@+id/btnDownload"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбрать группу"
        android:textSize="12pt"
        android:layout_marginBottom="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDownload">

        <Button
            android:id="@+id/btnChooseFromFile"
            style="@style/AppTheme.StartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбрать таблицу из файловой системы" />

        <Button
            android:id="@+id/btnDownloadFromAppServer"
            style="@style/AppTheme.StartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Скачать расписание с сервера приложения" />

        <Button
            android:id="@+id/btnSettings"
            style="@style/AppTheme.StartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Открыть настройки приложения"  />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>